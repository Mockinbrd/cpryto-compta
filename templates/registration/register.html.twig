{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="h-screen flex">
        <div class="m-auto">
            <h1 class="mb-6">Register</h1>

            {{ form_start(registrationForm) }}
            <div>
                <label for="email">Email</label>
            </div>
            <div>
                {{ form_widget(registrationForm.email) }}
            </div>
            <div>
                <label for="plainPassword">Password</label>
            </div>
            <div>
                {{ form_widget(registrationForm.plainPassword.first) }}
            </div>
            <div>
                <label for="plainPasswordConfirmation">Confirm password</label>
            </div>
            <div>
                {{ form_widget(registrationForm.plainPassword.second) }}
            </div>
            <div>
                <label for="terms">Agree Terms</label>
            </div>
            <div>
                {{ form_widget(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="flex mx-auto mt-6 px-4 py-1 rounded bg-blue-500 text-white focus:outline-none focus:ring focus:border-blue-300">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
